  <style>
    
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: Arial, sans-serif;
  background-image: url('https://img.freepik.com/premium-photo/lone-tree-overlooks-breathtaking-landscape-mountains-clouds-capturing-tranquility-dawn-high-elevation_86390-45894.jpg?w=996'); 
  background-size: cover; 
  background-position: center;
  color: #fff; 
  min-height: 100vh; 
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.main-content {
  text-align: center;
  padding: 50px;
  background: rgba(0, 0, 0, 0.5);
  border-radius: 10px;
  margin: 30px auto;
  width: 80%;
  max-width: 800px;
  color: #fff;
}

 h1 {
  font-family: "Shadows Into Light", system-ui;
  font-weight: bold;
  font-style: normal;
}
.para{
  color:#2a2f40;
}

.main-content p {
  font-size: 1.2em;
  line-height: 1.6;
  margin-bottom: 20px;
}

/* Animated Footer */
.footer {
  background-color: #240750;
  padding: 1px 0;
  text-align: center;
  color: #fff;
  position: relative;
}

.footer-content {
  max-width: 800px;
  margin: 0 auto;
}

.footer-content p {
  margin-bottom: 10px;
}

.footer-animation {
  display: inline-block;
  animation: slideUp 3s infinite ease-in-out;
}

@keyframes slideUp {
  0% {
    transform: translateY(0);
    opacity: 1;
  }
  50% {
    transform: translateY(-10px);
    opacity: 0.7;
  }
  100% {
    transform: translateY(0);
    opacity: 1;
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .main-content {
    width: 90%;
  }
}

    
